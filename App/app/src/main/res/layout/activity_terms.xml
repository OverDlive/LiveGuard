<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <!-- 뒤로 가기 버튼 -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:contentDescription="뒤로 가기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_margin="64dp" />

    <!-- 제목 LIVE GUARD -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIVE GUARD"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#00B2A9"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintTop_margin="56dp"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 부제목 -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서비스 이용에 동의해 주세요"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintTop_margin="8dp"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 모두 동의하기 박스 -->

    <!-- 개별 항목 1 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_agree_all"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="144dp"
        android:background="@drawable/bg_agree_all"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle">

        <ToggleButton
            android:id="@+id/checkbox_all"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:background="@drawable/checkbox_toggle_selector"
            android:backgroundTint="@null"
            android:buttonDrawable="@null"
            android:text=""
            android:textOff=""
            android:textOn=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.514" />

        <TextView
            android:id="@+id/tv_agree_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="모두 동의하기"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/checkbox_all"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item2">

        <ToggleButton
            android:id="@+id/checkbox_item3"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:background="@drawable/checkbox_toggle_selector"
            android:backgroundTint="@null"
            android:buttonDrawable="@null"
            android:text=""
            android:textOff=""
            android:textOn=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="위치정보 수집 및 위치기반서비스 이용약관 (필수)"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/checkbox_item3"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item1">

        <ToggleButton
            android:id="@+id/checkbox_item2"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:background="@drawable/checkbox_toggle_selector"
            android:backgroundTint="@null"
            android:buttonDrawable="@null"
            android:text=""
            android:textOff=""
            android:textOn=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="개인정보처리방침 (필수)"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/checkbox_item2"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_agree_all">

        <ToggleButton
            android:id="@+id/checkbox_item1"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:background="@drawable/checkbox_toggle_selector"
            android:backgroundTint="@null"
            android:buttonDrawable="@null"
            android:text=""
            android:textOff=""
            android:textOn=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="서비스 이용약관 (필수)"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/checkbox_item1"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 개별 항목 2 -->

    <!-- 개별 항목 3 -->

    <!-- 하단 민트색 버튼 -->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="312dp"
        android:layout_height="56dp"
        android:layout_marginTop="172dp"
        android:backgroundTint="#00B2A9"
        android:text="휴대폰 번호로 계속하기"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item3" />

</androidx.constraintlayout.widget.ConstraintLayout>
