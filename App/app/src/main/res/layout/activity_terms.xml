<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <!-- 뒤로 가기 버튼 -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:contentDescription="뒤로 가기"
        android:layout_marginBottom="16dp"/>

    <!-- 제목 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seoul Mate"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#00B2A9"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서비스 이용에 동의해 주세요"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="8dp"/>

    <!-- 모두 동의하기 -->
    <LinearLayout
        android:id="@+id/btn_agree_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_agree_all"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="24dp">

        <CheckBox
            android:id="@+id/checkBoxAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모두 동의하기"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:button="@drawable/checkbox_toggle_selector"/>
    </LinearLayout>

    <!-- 개별 동의 항목 -->
    <LinearLayout
        android:id="@+id/layout_terms_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="서비스 이용약관 (필수)"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:button="@drawable/checkbox_toggle_selector"/>

        <TextView
            android:id="@+id/tv_terms_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자세히 보기"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- 개인정보처리방침 동의 항목 -->
    <LinearLayout
        android:id="@+id/layout_terms_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="개인정보처리방침 (필수)"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:button="@drawable/checkbox_toggle_selector"/>

        <TextView
            android:id="@+id/tv_privacy_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자세히 보기"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- 위치정보 이용동의 및 위치기반서비스 이용약관 동의 항목 -->
    <LinearLayout
        android:id="@+id/layout_terms_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="위치정보 이용동의 및 위치기반서비스 이용약관 (필수)"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:button="@drawable/checkbox_toggle_selector"/>

        <TextView
            android:id="@+id/tv_location_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자세히 보기"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- 네이버 로그인 버튼 -->
    <Button
        android:id="@+id/btn_agree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_confirm_mint_vector"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:text="네이버 아이디로 계속하기"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="48dp"
        android:paddingVertical="16dp"
        android:layout_marginBottom="24dp"/>
</LinearLayout>