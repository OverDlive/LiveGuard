<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <Button
        android:id="@+id/btn_choice_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="파워풀"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_choice_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="힐링"
        app:layout_constraintTop_toBottomOf="@id/btn_choice_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_choice_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="갬성"
        app:layout_constraintTop_toBottomOf="@id/btn_choice_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_choice_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="핫플"
        app:layout_constraintTop_toBottomOf="@id/btn_choice_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
