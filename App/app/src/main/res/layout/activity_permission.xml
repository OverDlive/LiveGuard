<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:padding="24dp">

    <!-- 선택 접근 권한 텍스트 -->
    <TextView
        android:id="@+id/tv_permission_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="LIVE GUARD는 서비스 이용에 꼭 필요한 권한만 받아요."
        android:textColor="#1C1C1E"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_margin="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 선택 접근 권한 카드 (흰 배경) -->
    <ImageView
        android:id="@+id/bg_permission_card"
        android:layout_width="312dp"
        android:layout_height="389dp"
        android:layout_marginTop="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_permission_card_vector"
        app:layout_constraintTop_toBottomOf="@id/tv_permission_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 하단 설명 텍스트 -->
    <TextView
        android:id="@+id/tv_permission_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위 접근권한은 더 나은 서비스 제공을 위해 사용되며 다른 목적으로 활용되지 않습니다."
        android:textSize="12sp"
        android:textColor="#8E8E93"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/bg_permission_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 민트색 확인 버튼 -->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="312dp"
        android:layout_height="56dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#00B2A9"
        android:text="확인"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_permission_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
