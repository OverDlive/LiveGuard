<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- ❌ 닫기 버튼 -->
    <ImageView
        android:id="@+id/close_feature"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_close"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"/>

    <!-- 8개의 버튼 (2x4 정렬) -->
    <GridLayout
        android:id="@+id/feature_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4"
        android:layout_gravity="center"
        android:padding="16dp">

        <Button android:id="@+id/btn_1" android:text="관광지" />
        <Button android:id="@+id/btn_2" android:text="맛집" />
        <Button android:id="@+id/btn_3" android:text="쇼핑" />
        <Button android:id="@+id/btn_4" android:text="운동" />
        <Button android:id="@+id/btn_5" android:text="공연/영화" />
        <Button android:id="@+id/btn_6" android:text="전시" />
        <Button android:id="@+id/btn_7" android:text="체험활동" />
        <Button android:id="@+id/btn_8" android:text="추천" />
    </GridLayout>
</FrameLayout>
