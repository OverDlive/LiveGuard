<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <!-- 뒤로 가기 버튼 -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:contentDescription="뒤로 가기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp" />

    <!-- 타이틀 텍스트 -->

    <!-- 부가 설명 텍스트 -->

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="start"
        android:text="가장 편한 방법으로\n시작해 보세요!"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1분이면 회원가입 가능해요"
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 휴대폰 번호로 계속하기 (민트 버튼) -->

    <!-- 카카오 계정으로 계속하기 (노란색 버튼) -->
    <Button
        android:id="@+id/btn_phone_login"
        android:layout_width="312dp"
        android:layout_height="56dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#00B2A9"
        android:text="휴대폰 번호로 계속하기"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle" />

    <Button
        android:id="@+id/btn_kakao_login"
        android:layout_width="312dp"
        android:layout_height="56dp"
        android:layout_marginTop="66dp"
        android:backgroundTint="#FEE500"
        android:text="카카오 계정으로 계속하기"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btn_phone_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Google로 계속하기 (하얀색 버튼) -->
    <Button
        android:id="@+id/btn_google_login"
        android:layout_width="312dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FFFFFF"
        android:text="Google로 계속하기"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btn_kakao_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
